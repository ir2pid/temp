<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient9"
    android:gravity="center">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:weightSum="6">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/abheda_courses"
                android:id="@+id/textView6"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <com.noisyninja.abheda_droid.control.AnimatedButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/button1"
                android:background="@drawable/cloud_download" />
        </LinearLayout>

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arc_progress_total"
            android:layout_margin="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="2" />
    </LinearLayout>

    <GridView
        android:id="@+id/gridview1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:numColumns="1"
        android:stretchMode="columnWidth"
        android:listSelector="@drawable/button_white"
        android:textAlignment="center"
        android:smoothScrollbar="true"
        android:drawSelectorOnTop="true"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="2dp">

    </GridView>


</LinearLayout>