<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient9"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="q no" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_white"
                    android:text="option 1" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_white"
                    android:text="option 2" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_white"
                    android:text="option 3" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_white"
                    android:text="option 4" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_green"
                    android:text="@string/submit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="4">

                <FrameLayout
                    android:id="@+id/frameLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_white"
                        android:src="@drawable/imageholder" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/circleButton11"
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_tick"
                        android:visibility="invisible"
                        app:cb_color="@color/button_green"
                        app:cb_pressedRingWidth="8dip" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/circleButton12"
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_cross"
                        android:visibility="invisible"
                        app:cb_color="@color/button_red"
                        app:cb_pressedRingWidth="8dip" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_white"
                        android:src="@drawable/imageholder" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/circleButton21"
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_tick"
                        android:visibility="invisible"
                        app:cb_color="@color/button_green"
                        app:cb_pressedRingWidth="8dip" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/circleButton22"
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_cross"
                        android:visibility="invisible"
                        app:cb_color="@color/button_red"
                        app:cb_pressedRingWidth="8dip" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_white"
                        android:src="@drawable/imageholder" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/circleButton31"
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_tick"
                        android:visibility="invisible"
                        app:cb_color="@color/button_green"
                        app:cb_pressedRingWidth="8dip" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/circleButton32"
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_cross"
                        android:visibility="invisible"
                        app:cb_color="@color/button_red"
                        app:cb_pressedRingWidth="8dip" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_white"
                        android:src="@drawable/imageholder" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/circleButton41"
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_tick"
                        android:visibility="invisible"
                        app:cb_color="@color/button_green"
                        app:cb_pressedRingWidth="8dip" />

                    <at.markushi.ui.CircleButton
                        android:id="@+id/circleButton42"
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_cross"
                        android:visibility="invisible"
                        app:cb_color="@color/button_red"
                        app:cb_pressedRingWidth="8dip" />
                </FrameLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>